<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 text-center">
        <!-- IcÃ´ne d'erreur -->
        <div class="flex justify-center">
            <i class="fas fa-exclamation-triangle text-6xl text-red-500"></i>
        </div>

        <!-- Titre -->
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-4">
                <%= titre || 'Erreur' %>
            </h1>
            <p class="text-lg text-gray-600 mb-8">
                <%= message || 'Une erreur s\' est produite.' %>
            </p>
        </div>

        <!-- Boutons d'action -->
        <div class="space-y-4">
            <button onclick="window.history.back()"
                class="w-full bg-nutri-green text-white py-3 px-4 rounded-lg font-medium hover:bg-green-600 focus:ring-2 focus:ring-nutri-green focus:ring-offset-2 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>
                Retour
            </button>

            <a href="/"
                class="block w-full bg-gray-100 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-200 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors">
                <i class="fas fa-home mr-2"></i>
                Accueil
            </a>
        </div>
    </div>
</div>