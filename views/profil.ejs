                        <p class="text-[#1F2937] mb-4 font-bold text-xl">
                            <%= utilisateur.nomComplet %>
                        </p>
                        <p class="text-[#64748B] text-sm">
                            <%= utilisateur.email %>
                        </p>
                        <p
                            class="inline-block px-4 font-semibold py-1 rounded-full bg-emerald-500/10 text-[#10B981] text-sm mt-2">
                            Membre depuis <%= new Date(utilisateur.dateCreation).toLocaleDateString('fr-FR') %>
                        </p>
                    </div>
                </div>

                <!-- Statistiques -->
