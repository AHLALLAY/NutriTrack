    <script>
        // Fonction pour mettre à jour le gradient
        function updateSliderGradient(slider, valueDisplay) {
            const min = parseFloat(slider.min);
            const max = parseFloat(slider.max);
            const value = parseFloat(slider.value);

            // Calcul du pourcentage
            const percentage = ((value - min) / (max - min)) * 100;

            // Mise à jour du gradient (vert jusqu'à la position, gris après)
            slider.style.background = `linear-gradient(to right, #10b981 0%, #10b981 ${percentage}%, #e5e7eb ${percentage}%, #e5e7eb 100%)`;

            // Mise à jour de la valeur affichée
            const isMobile = slider.id.includes('Mobile');
            if (isMobile) {
                valueDisplay.textContent = Math.round(value);
            } else {
                // Pour desktop, on ajoute l'unité
                if (slider.id.includes('calories')) {
                    valueDisplay.textContent = Math.round(value) + ' kcal';
                } else {
                    valueDisplay.textContent = Math.round(value) + ' g';
                }
            }
        }

        // Initialisation pour tous les sliders (mobile + desktop)
        const allSliders = [
            // Mobile
            { slider: document.getElementById('caloriesSliderMobile'), display: document.getElementById('caloriesValueMobile') },
            { slider: document.getElementById('proteinesSliderMobile'), display: document.getElementById('proteinesValueMobile') },
            { slider: document.getElementById('glucidesSliderMobile'), display: document.getElementById('glucidesValueMobile') },
            { slider: document.getElementById('lipidesSliderMobile'), display: document.getElementById('lipidesValueMobile') },
            // Desktop
            { slider: document.getElementById('caloriesSlider'), display: document.getElementById('caloriesValue') },
            { slider: document.getElementById('proteinesSlider'), display: document.getElementById('proteinesValue') },
            { slider: document.getElementById('glucidesSlider'), display: document.getElementById('glucidesValue') },
            { slider: document.getElementById('lipidesSlider'), display: document.getElementById('lipidesValue') }
        ];

        allSliders.forEach(({ slider, display }) => {
            if (slider && display) {
                // Initialisation au chargement
                updateSliderGradient(slider, display);

                // Mise à jour lors du déplacement
                slider.addEventListener('input', () => {
                    updateSliderGradient(slider, display);
                });
            }
        });
    </script>