                    <div class="w-full h-2 bg-gray-200 rounded mt-3">
                        <% var caloriesWidth = Math.min(kpis.calories.pourcentage, 100); %>
                        <div class="h-2 bg-green-500 rounded" data-width="<%= caloriesWidth %>"></div>
                    </div>
                </div>

                <!-- Carte Hydratation -->
                <div class="bg-white rounded-[16px] border border-[#E2E8F0] p-4">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm text-gray-600">Hydratation</span>
                        <i class="fas fa-tint text-blue-500"></i>
                    </div>
                    <div class="text-2xl font-bold text-gray-900">
                        <%= kpis.hydratation.valeurLitres %>L / <%= kpis.hydratation.objectifLitres %>L
                    </div>
                    <div class="text-xs text-gray-500 mt-1"><%= kpis.hydratation.pourcentage %>% de l'objectif</div>
                    <div class="w-full h-2 bg-gray-200 rounded mt-3">
                        <% var hydratationWidth = Math.min(kpis.hydratation.pourcentage, 100); %>
                        <div class="h-2 bg-blue-500 rounded" data-width="<%= hydratationWidth %>"></div>
                    </div>
                </div>

                <!-- Carte Prot√©ines -->
                <div class="bg-white rounded-[16px] border border-[#E2E8F0] p-4">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm text-gray-600">Prot√©ines</span>
                        <i class="fas fa-dumbbell text-green-500"></i>
                    </div>
                    <div class="text-2xl font-bold text-gray-900">
                        <%= kpis.proteines.valeurGrammes %>g / <%= kpis.proteines.objectifGrammes %>g
                    </div>
                    <div class="text-xs text-gray-500 mt-1"><%= kpis.proteines.pourcentage %>% de l'objectif</div>
                    <div class="w-full h-2 bg-gray-200 rounded mt-3">
                        <% var proteinesWidth = Math.min(kpis.proteines.pourcentage, 100); %>
                        <div class="h-2 bg-green-500 rounded" data-width="<%= proteinesWidth %>"></div>
                    </div>
                </div>

                <!-- Carte Glucides -->
                <div class="bg-white rounded-[16px] border border-[#E2E8F0] p-4">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm text-gray-600">Glucides</span>
                        <i class="fas fa-square text-red-500"></i>
                    </div>
                    <div class="text-2xl font-bold text-gray-900">
                        <%= kpis.glucides.valeurGrammes %>g / <%= kpis.glucides.objectifGrammes %>g
                    </div>
                    <div class="text-xs text-gray-500 mt-1"><%= kpis.glucides.pourcentage %>% de l'objectif</div>
                    <div class="w-full h-2 bg-gray-200 rounded mt-3">
                        <% var glucidesWidth = Math.min(kpis.glucides.pourcentage, 100); %>
                        <div class="h-2 bg-red-500 rounded" data-width="<%= glucidesWidth %>"></div>
                    </div>
                </div>
            </div>


            <!-- Grille principale (liste repas + sidebar) -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Liste des repas -->
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div>
                                <h4 class="text-lg font-semibold text-gray-900">Repas d'aujourd'hui</h4>
                                <p class="text-xs text-gray-500">Analys√©s par l‚ÄôIA</p>
                            </div>
                            <button type="button" class="text-xs text-gray-500 hover:text-gray-700">Voir tout</button>
                        </div>

                        <ul class="divide-y" id="liste-repas">
                            <% if (repasDuJour && repasDuJour.length > 0) { %>
                                <% repasDuJour.forEach(function(repas) { %>
                                    <li class="py-3 flex items-center justify-between">
                                        <div>
                                            <p class="text-sm font-medium text-gray-800"><%= repas.nom %></p>
                                            <p class="text-xs text-gray-500"><%= repas.heureFormatee %> ‚Ä¢ <%= repas.typeRepasFormate %></p>
                                        </div>
                                        <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded"><%= repas.calories %> kcal</span>
