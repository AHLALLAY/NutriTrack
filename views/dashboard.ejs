                                </li>
                            <% } %>
                        </ul>

                        <div class="mt-4">
                            <button type="button" class="text-sm bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded">
                                Ajouter un repas
                            </button>
                        </div>
                    </div>

                    <!-- Progression hebdomadaire -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h4 class="text-lg font-semibold text-gray-900">Progression cette semaine</h4>
                            <button type="button" class="text-xs text-gray-500 hover:text-gray-700">Rapports</button>
                        </div>
                        <div class="h-40 bg-gray-50 border border-dashed border-gray-200 rounded flex items-center justify-center text-xs text-gray-400">
                            Graphique de progression interactif
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                    <div class="bg-white rounded-lg shadow p-6">
                        <h4 class="text-lg font-semibold text-gray-900 mb-4">Actions rapides</h4>
                        <div class="space-y-3">
                            <a href="/analyser" class="w-full flex items-center justify-center bg-nutri-green text-white py-2 rounded hover:bg-emerald-600">
