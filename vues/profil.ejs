                    <option value="diabete" <%=profil && profil.typeProfil==='diabete' ? 'selected' : '' %>>Diabète
                    </option>
                    <option value="hypertension" <%=profil && profil.typeProfil==='hypertension' ? 'selected' : '' %>
                        >Hypertension</option>
                    <option value="obesite" <%=profil && profil.typeProfil==='obesite' ? 'selected' : '' %>>Obésité
