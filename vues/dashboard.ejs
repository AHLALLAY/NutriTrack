    <!-- Messages de notification -->
    <% if (typeof erreur !== 'undefined' && erreur) { %>
        <div class="fixed top-4 right-4 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg shadow z-50" id="message-erreur">
            <div class="flex items-center">
                <i class="fas fa-exclamation-circle mr-2"></i>
                <span><%= erreur %></span>
                <button onclick="fermerMessage('message-erreur')" class="ml-4 text-red-500 hover:text-red-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    <% } %>
    
    <% if (typeof succes !== 'undefined' && succes) { %>
        <div class="fixed top-4 right-4 bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg shadow z-50" id="message-succes">
            <div class="flex items-center">
                <i class="fas fa-check-circle mr-2"></i>
                <span><%= succes %></span>
                <button onclick="fermerMessage('message-succes')" class="ml-4 text-green-500 hover:text-green-700">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
    <% } %>

    <!-- Contenu principal -->
    <div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-5xl mx-auto">
            <!-- En-tête -->
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center">
                    <i class="fas fa-leaf text-3xl text-nutri-green mr-3"></i>
                    <div>
                        <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">NutriTrack</h1>
                        <p class="text-sm text-gray-500">Bonjour <%= utilisateur ? utilisateur.nomComplet : 'Utilisateur' %></p>
                    </div>
                </div>
                <form action="/deconnexion" method="POST" class="hidden sm:block">
                    <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded-lg font-medium hover:bg-red-600 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                        <i class="fas fa-sign-out-alt mr-2"></i>
                        Déconnexion
                    </button>
                </form>
            </div>

            <!-- KPIs -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                <div class="bg-white rounded-lg shadow p-4">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm text-gray-500">Calories</span>
                        <i class="fas fa-fire text-amber-500"></i>
                    </div>
                    <div class="text-xl font-semibold text-gray-900">1247 <span class="text-sm text-gray-500">/ 1800</span></div>
                    <div class="w-full h-2 bg-gray-100 rounded mt-3">
                        <div class="h-2 bg-amber-400 rounded" style="width: 69%"></div>
                    </div>
                    <div class="mt-2 text-xs text-gray-500">69% atteint</div>
                </div>

                <!-- Boutons d'action -->
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
                    <a href="/profil" class="bg-nutri-green text-white py-3 px-6 rounded-lg font-medium hover:bg-green-600 focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors text-center">
                        <i class="fas fa-user mr-2"></i>
                        Mon Profil
                    </a>
                    <a href="/profil/objectifs" class="bg-nutri-blue text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors text-center">
                        <i class="fas fa-target mr-2"></i>
                        Mes Objectifs
                    </a>
                </div>

                <!-- Bouton de déconnexion -->
                <div class="text-center">
                    <form action="/deconnexion" method="POST" class="inline-block">
                        <button type="submit" 
                                class="bg-red-500 text-white py-3 px-6 rounded-lg font-medium hover:bg-red-600 focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                            <i class="fas fa-sign-out-alt mr-2"></i>
                            Se déconnecter
                        </button>
                    </form>
                </div>
            </div>

            <!-- Grille principale (liste repas + sidebar) -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Liste des repas -->
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div>
                                <h4 class="text-lg font-semibold text-gray-900">Repas d'aujourd'hui</h4>
                                <p class="text-xs text-gray-500">Analysés par l’IA</p>
                            </div>
                            <button type="button" class="text-xs text-gray-500 hover:text-gray-700">Voir tout</button>
                        </div>

                        <ul class="divide-y">
                            <li class="py-3 flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-800">Salade de quinoa aux légumes</p>
                                    <p class="text-xs text-gray-500">13:00 • Déjeuner</p>
                                </div>
                                <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">450 kcal</span>
                            </li>
                            <li class="py-3 flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-800">Smoothie protéiné banana</p>
                                    <p class="text-xs text-gray-500">08:30 • Petit-déjeuner</p>
                                </div>
                                <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">320 kcal</span>
                            </li>
                            <li class="py-3 flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-800">Yaourt grec aux fruits</p>
                                    <p class="text-xs text-gray-500">16:00 • Collation</p>
                                </div>
                                <span class="text-xs bg-gray-100 text-gray-700 px-2 py-1 rounded">180 kcal</span>
                            </li>
                        </ul>

                        <div class="mt-4">
                            <button type="button" class="text-sm bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 py-2 rounded">
                                Ajouter un repas
                            </button>
                        </div>
                    </div>

                    <!-- Progression hebdomadaire -->
                    <div class="bg-white rounded-lg shadow p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h4 class="text-lg font-semibold text-gray-900">Progression cette semaine</h4>
                            <button type="button" class="text-xs text-gray-500 hover:text-gray-700">Rapports</button>
                        </div>
                        <div class="h-40 bg-gray-50 border border-dashed border-gray-200 rounded flex items-center justify-center text-xs text-gray-400">
                            Graphique de progression interactif
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                    <div class="bg-white rounded-lg shadow p-6">
                        <h4 class="text-lg font-semibold text-gray-900 mb-4">Actions rapides</h4>
                        <div class="space-y-3">
                            <button type="button" class="w-full flex items-center justify-center bg-nutri-green text-white py-2 rounded hover:bg-emerald-600">
                                <i class="fas fa-camera mr-2"></i>
                                Analyser un repas
                            </button>
                            <button type="button" class="w-full flex items-center justify-center border py-2 rounded hover:bg-gray-50">
                                <i class="fas fa-sliders mr-2"></i>
                                Modifier objectifs
                            </button>
                            <button type="button" class="w-full flex items-center justify-center border py-2 rounded hover:bg-gray-50">
                                <i class="fas fa-chart-line mr-2"></i>
                                Voir rapports
                            </button>
                        </div>
                    </div>

                    <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-4">
                        <div class="flex items-start">
                            <i class="fas fa-lightbulb text-emerald-600 mr-2 mt-0.5"></i>
                            <div>
                                <p class="text-sm font-medium text-emerald-800">Conseil du jour</p>
                                <p class="text-xs text-emerald-700">Buvez 2 verres d’eau avant votre prochain repas pour améliorer la digestion.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pied de page -->
            <div class="mt-8 text-center">
                <p class="text-xs text-gray-500">NutriTrack • Assistant nutritionnel personnalisé</p>
            </div>
        </div>
    </div>
